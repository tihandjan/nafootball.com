
<div class="well">
    <div class="nav nav-pills">
        <li role="presentation" class="active"><a class="btn btn-info" href="<%= new_manager_player_path %>">Добавить игрока</a></li>
    </div>
</div>
<div class="well">
    <div class="panel panel-primary">
        <div class="panel-heading">Список всех игроков</div>
        <div class="panel-body">
            <div class="list-group">
                <% @players.each do |player| %>
                    <button type="button" class="list-group-item"><span style="color: #337ab7;"><%= player.team.name %> | <%= player.id %></span> | <%= truncate(player.name, lenght: 60) %> <%= link_to 'Удалить', manager_player_path(player), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger', style: 'float: right; margin-left: 10px;' %><a href="<%= edit_manager_player_path(player) %>" style="float: right;" class="btn btn-warning">Редактировать</a><%= link_to 'Просмотреть', player_path(player), class: 'btn btn-success', style: 'float: right; margin-right: 10px;' %></button>
                <% end %>
            </div>
        </div>
    </div>
    <%= will_paginate @players %>
</div>