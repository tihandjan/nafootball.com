
<div class="well">
    <div class="nav nav-pills">
        <li role="presentation" class="active"><a class="btn btn-info" href="<%= new_manager_match_path %>">Создать запись</a></li>
    </div>
</div>
<div class="well">
    <div class="panel panel-primary">
        <div class="panel-heading">Список всех записей</div>
        <div class="panel-body">
            <div class="list-group">
                <% @matches.each do |match| %>
                    <button type="button" class="list-group-item"><span style="color: #337ab7;"><%= match.id %></span> | <%= truncate(match.homeTeamName, lenght: 60) %> | <%= truncate(match.awayTeamName, lenght: 60) %> | <%= match.league %> <%= link_to 'Удалить', manager_match_path(match), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger', style: 'float: right; margin-left: 10px;' %><a href="<%= edit_manager_match_path(match) %>" style="float: right;" class="btn btn-warning">Редактировать</a></button>
                <% end %>
            </div>
        </div>
    </div>
    <%= will_paginate @matches %>
</div>