
<div class="panel panel-primary">
    <div class="panel-heading">Редактировать контент</div>
    <div class="panel-body">
        <div class="well">
            <%= render 'manager/shared/errors', model: @picture %> 
            <%= form_for @picture, url: manager_picture_path do |f| %>
                <div class="form-group">
                    <%= f.label :picture %>
                    <%= f.file_field :picture, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :image_alt, 'Alt Краткое описание того, что изображено на фото' %>
                    <%= f.text_field :image_alt, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control wysihtml5' %>
                </div>
                <div class="form-group">
                    <%= f.submit 'Обновить', class: 'btn btn-primary' %>  
                </div>
            <% end %>
        </div>
    </div>
</div>

<script>
    $(function(){
        $('.wysihtml5').each(function(i, elem) {
            $(elem).wysihtml5({ toolbar:{ 'image': false } });
        });
    })
</script>
