
<% if @league == 'apl' %>
    <%= render 'shared/index_leagues/apl_teams' %>
<% elsif @league == 'laliga' %>
    <%= render 'shared/index_leagues/laliga_teams' %>
<% elsif @league == 'bundesliga' %>
    <%= render 'shared/index_leagues/bundesliga_teams' %>
<% elsif @league == 'seria-a' %>
    <%= render 'shared/index_leagues/seria_a_teams' %>
<% elsif @league == 'chempions-league' %>
    <% @add_class = 'league-row-cl' %>
    <%= render 'shared/index_leagues/chempions_league_teams' %>
<% elsif @league == 'ukraine' %>
    <%= render 'shared/index_leagues/ukraine_teams' %>
<% elsif @league == 'russian' %>
    <%= render 'shared/index_leagues/russian_teams' %>
<% end %>

<script>
        var element = $('.league-col a i');
        element.css({'zoom': '0.79'})
        element.parent().hover(function(){
            $(this).children().stop(true, false).animate({ zoom: "1" }, "fast");
        }, function() {
            $(this).children().stop(true, false).animate({ zoom: "0.79" }, "fast");
        });
</script>