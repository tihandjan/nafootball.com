<!DOCTYPE html>
<html>
<head>
  <%= display_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true, :cache => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, :cache => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag %>
  <meta name="google-site-verification" content="XEOkbrqNV20rahm1HHzFukYRkFU4lTjBT-hvm7Cy5vc" />
  <meta name="yandex-verification" content="9e59c89149ed3d25" />
  <!--google analitics-->
    <% if Rails.env.production? %>
      <%= analytics_init if GoogleAnalytics.valid_tracker? %>
    <% end %>
    <!--google analitics end  -->
</head>

<!--addsens start-->
<% if Rails.env.production? %>
  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  <script>
    (adsbygoogle = window.adsbygoogle || []).push({
      google_ad_client: "ca-pub-7823952112663609",
      enable_page_level_ads: true
    });
  </script>
<% end %>
<!--addsense end-->

<body class="<%= controller.controller_name %> <%= @editional_class %>">

  <%= render 'layouts/header' %>
  <div class="container-fluid search-container"><div class="search-wrapper"><%= render 'layouts/search' %></div><div class="search-overlay" onclick="Searchhide();"></div></div>
  <%= render 'layouts/additional_header' %>
    
  <div class="container">
    <% if current_user && (current_user.has_role? :admin) %>
      <%= render 'manager/shared/menu' %>
    <% end %>
    <%= render 'layouts/messages' %>

    <%= yield %>
  </div>
  <%= debug(params) if Rails.env.development? %>
  <%= render 'layouts/footer' %>
  
  <!--modals-->
  <%= render 'layouts/modals/modal_contact' %>
  <%= render 'layouts/modals/modal_auth' %>

</body>
</html>
