<div class="donation" style="padding: 30px; background: #FFF; border-radius: 4px; margin-top: 50px; margin-bottom: 120px;">
    <h1 class="text-center">Donation page</h1>

    <div class="form">
        <%= form_for @donation do |f| %>
            <div class="form-group">
                <%= f.label :amount, 'Amount($)' %>
                <%= f.text_field :amount, type: 'number', class: 'form-control', style: 'width: 100px;' %>
            </div>
            <div class="form-group">
                <%= f.label :full_name, 'What is your name?' %>
                <%= f.text_field :full_name, class: 'form-control', style: 'width: 250px;' %>
            </div>
            <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, class: 'form-control', style: 'width: 250px;' %>
            </div>
            <div class="form-group">
                <%= f.label :message, 'Would you like to leave a comment?' %>
                <%= f.text_area :message, class: 'form-control', rows: 5, style: 'width: 360px;' %>
            </div>
            <div class="form-group">
                <%= f.submit 'Donate', class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>

</div>